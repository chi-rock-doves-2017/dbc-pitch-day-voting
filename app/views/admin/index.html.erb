<div class="header">
  <h2>Admin Panel</h2>
</div>

<div class="pitches-container">
  <%= form_for @cohort do |f| %>
    <%= f.hidden_field :admin_action, :value => :pitch_end %>
    <%= f.hidden_field :id, :value => @cohort.id %>
    <%= f.submit 'End Pitch Day', id: 'end-pitch-day', class: 'button-primary button--teal margin' %>
  <% end %>

  <%= form_for @cohort do |f| %>
    <%= f.hidden_field :admin_action, :value => :pitch_start %>
    <%= f.hidden_field :id, :value => @cohort.id %>
    <%= f.submit 'Start Pitch Day', id: 'start-pitch-day', class: 'button-primary button--teal margin' %>
  <% end %>

