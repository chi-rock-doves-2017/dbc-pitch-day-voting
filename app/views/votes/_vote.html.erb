<div class="pitch-container">
	<div id="vote<%=vote.id%>" class="vote-container">
		<%= render 'pitches/pitch', pitch: vote.pitch %>
		<div class="pitch-container vote-container">
			<div id="hide-button-pitch<%=vote.id%>" class="hide-button-container vote-item">
				<%= form_tag('/votes', method: :post) do %>
				<%= check_box_tag("hide#{vote.id}") %>
				<%= label_tag("hide#{vote.id}", "Hide") %>
				<% end %>
			</div>
			<div id="rank-buttons-pitch<%=vote.id%>" class="rank-buttons-container vote-item">
				<%= form_tag('/votes', method: :patch, class: "up-vote-button") do %>
				<%= hidden_field_tag "vote_id", "#{vote.id}" %>
				<%= hidden_field_tag "change_value", "1" %>
				<%= submit_tag("Up", class: "button-primary button--teal vote") %>
				<% end %>
				<%= form_tag('/votes', method: :patch, class: "down-vote-button") do %>
				<%= hidden_field_tag "vote_id", "#{vote.id}" %>
				<%= hidden_field_tag "change_value", "-1" %>
				<%= submit_tag("Down", class: "button-primary button--teal vote") %>
				<% end %>
			</div>
		</div>
	</div>
</div>
